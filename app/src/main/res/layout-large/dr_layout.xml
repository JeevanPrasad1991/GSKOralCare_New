    <RelativeLayout
        android:id="@+id/relativeLayout1"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginTop="20dp"
        android:background="@drawable/drimgdcrsd" >

        <Button
            android:id="@+id/nobuy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="21dp"
            android:layout_marginRight="14dp"
            android:paddingBottom="10dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="10dp"
            android:text="No"
            android:textSize="20sp" />

        <Button
            android:id="@+id/buynow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/nobuy"
            android:layout_alignBottom="@+id/nobuy"
            android:layout_toLeftOf="@+id/nobuy"
            android:paddingBottom="10dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="10dp"
            android:text="Buy"
            android:textSize="20sp" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/question1_btn"
        android:layout_width="730sp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/question1_titleheader"
        android:layout_marginTop="30sp"
        android:background="#3d67ad"
        android:padding="20sp"
        android:visibility="gone" >

        <ImageView
            android:id="@+id/question1_questionico"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="10sp"
            android:src="@drawable/questionmark" />

        <TextView
            android:id="@+id/message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/question1_questionico"
            android:text="Do you feel a short sharp pain when you drink or eat something Hot or Cold ?"
            android:textColor="#ffffff"
            android:textSize="22sp" />
    </RelativeLayout>

