<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/bg">

    <RelativeLayout
        android:id="@+id/login_topheader"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/title_bg"
        android:padding="10sp">

        <ImageView
            android:id="@+id/login_parinaamlogo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:src="@drawable/parinaamlogo" />

        <TextView
            android:id="@+id/login_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="Welcome to GSK Oral Care"
            android:textColor="#00458a"
            android:textSize="25sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/login_gsklogo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:src="@drawable/gsklogo" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/login_topheaderborderline"
        android:layout_width="fill_parent"
        android:layout_height="1sp"
        android:layout_below="@id/login_topheader"
        android:layout_marginBottom="40sp"
        android:background="#d1d1d1"></RelativeLayout>

    <RelativeLayout
        android:id="@+id/login_loginpart"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/login_topheaderborderline"
        android:layout_marginTop="60sp"
        android:gravity="center"
        android:paddingLeft="300sp"
        android:paddingRight="300sp"
        android:weightSum="1">

        <EditText
            android:id="@+id/login_useridtextbox"
            android:layout_width="fill_parent"
            android:layout_height="50sp"
            android:layout_alignParentTop="true"></EditText>

        <EditText
            android:id="@+id/login_passwordtextbox"
            android:layout_width="fill_parent"
            android:layout_height="50sp"
            android:layout_below="@+id/login_useridtextbox"
            android:inputType="textPassword" />


        <Button
            android:id="@+id/login_submitbtn"
            android:layout_width="130sp"
            android:layout_height="50sp"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/login_passwordtextbox"
            android:text="Submit"
            android:textSize="15sp" />
    </RelativeLayout>

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:padding="5sp"
        android:text="Â© 2017 CPM India"
        android:textColor="#0f0f0f"
        android:textSize="15sp" />

    <ImageView
        android:id="@+id/sensodynelogo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textView1"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="20px"
        android:layout_marginLeft="10px"
        android:src="@drawable/sensodyneminilogo" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:paddingRight="8sp"
        android:text="@string/vesionstr"
        android:textColor="#0f0f0f"
        android:textSize="13sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textView3"
        android:layout_alignParentRight="true"
        android:layout_marginTop="10sp"
        android:padding="2sp"
        android:text="Support Number(9.30 am to 6.00 pm) 011-49894989"
        android:textColor="#0f0f0f"
        android:textSize="13sp"
        android:textStyle="bold"
        android:visibility="gone" />

</RelativeLayout>