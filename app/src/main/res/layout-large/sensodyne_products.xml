<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/bg" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@drawable/bg"
        android:orientation="vertical" >

        <RelativeLayout
            android:id="@+id/question1_topheader"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/title_bg"
            android:padding="10sp" >

            <ImageView
                android:id="@+id/question1_parinaamlogo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:src="@drawable/parinaamlogo" />

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:src="@drawable/topminilogos" />

            <ImageView
                android:id="@+id/question1_gsklogo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:src="@drawable/gsklogo" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/question1_topheaderborderline"
            android:layout_width="fill_parent"
            android:layout_height="1sp"
            android:layout_below="@id/question1_topheader"
            android:layout_marginBottom="40sp"
            android:background="#d1d1d1" >
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/question1_titleheader"
            android:layout_width="fill_parent"
            android:layout_height="50sp"
            android:layout_below="@id/question1_topheader"
            android:background="#393939" >

            <TextView
                android:id="@+id/question1_titleaddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:paddingLeft="10sp"
                android:text="GSK Oral Care"
                android:textColor="#ffffff"
                android:textSize="18sp" />

            <ImageView
                android:id="@+id/back"
                android:layout_width="100sp"
                android:layout_height="35sp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10sp"
                android:visibility="gone"
               android:background="@drawable/back_btn_bg"
                android:paddingRight="10sp" />
            <Button
                android:id="@+id/home"
                android:layout_width="100dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10sp"
                android:text="home"
                android:paddingRight="10sp"
                android:layout_height="35dp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/question1_btn"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/question1_titleheader"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="10sp"
            android:layout_marginLeft="10sp"
            android:layout_marginRight="10sp"
            android:layout_marginTop="20sp"
            android:padding="20sp" >

            <ImageView
                android:id="@+id/question1_questionico"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginRight="15sp"
                android:src="@drawable/sensodyne" />

            <TextView
                android:id="@+id/question1_question"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/question1_questionico"
                android:layout_toRightOf="@+id/question1_questionico"
                android:text="Which package of Sensodyne Toothpaste do you generally buy ?"
                android:textColor="#242424"
                android:textSize="22sp" />

            <Button
                android:id="@+id/gms1"
                android:layout_width="120sp"
                android:layout_height="50sp"
                android:layout_alignLeft="@+id/question1_question"
                android:layout_below="@+id/question1_question"
                android:layout_marginRight="20sp"
                android:layout_marginTop="10sp"
                android:text="150 gms."
                android:textSize="16sp" />

            <Button
                android:id="@+id/gms2"
                android:layout_width="120sp"
                android:layout_height="50sp"
                android:layout_below="@+id/question1_question"
                android:layout_marginRight="20sp"
                android:layout_marginTop="10sp"
                android:layout_toRightOf="@+id/gms1"
                android:text="80 gms."
                android:textSize="16sp" />

            <Button
                android:id="@+id/gms3"
                android:layout_width="120sp"
                android:layout_height="50sp"
                android:layout_below="@+id/question1_question"
                android:layout_marginTop="10sp"
                android:layout_toRightOf="@+id/gms2"
                android:text="40 gms."
                android:textSize="16sp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/question1_mid"
            android:layout_width="fill_parent"
            android:layout_height="1sp"
            android:layout_below="@+id/question1_btn"
            android:layout_marginLeft="30sp"
            android:layout_marginRight="30sp"
            android:background="#cacaca" >
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/question2_btn"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/question1_btn"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="10sp"
            android:layout_marginRight="10sp"
            android:layout_marginTop="10sp"
            android:padding="20sp" >

            <ImageView
                android:id="@+id/question2_questionico"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginRight="15sp"
                android:src="@drawable/sensodyne_rapid_relief" />

            <TextView
                android:id="@+id/question2_question"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/question2_questionico"
                android:text="Which package of Rapid Relief do you generally buy ?"
                android:textColor="#242424"
                android:textSize="22sp" />

            <Button
                android:id="@+id/gms1a"
                android:layout_width="120sp"
                android:layout_height="50sp"
                android:layout_alignLeft="@+id/question2_question"
                android:layout_below="@+id/question2_question"
                android:layout_marginRight="20sp"
                android:layout_marginTop="10sp"
                android:text="80 gms."
                android:textSize="16sp" />

            <Button
                android:id="@+id/gms2a"
                android:layout_width="120sp"
                android:layout_height="50sp"
                android:layout_below="@+id/question2_question"
                android:layout_marginRight="20sp"
                android:layout_marginTop="10sp"
                android:layout_toRightOf="@+id/gms1a"
                android:text="40 gms."
                android:textSize="16sp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/question3_btn"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/question2_btn"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="10sp"
            android:layout_marginRight="10sp"
            android:layout_marginTop="10sp"
            android:padding="20sp" >

            <ImageView
                android:layout_width="140sp"
                android:layout_height="130sp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginRight="15sp"
                android:src="@drawable/parodontaxoffer" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Which package of Paradontax do you generally buy ?"
                android:textColor="#242424"
                android:textSize="22sp" />

            <Button
                android:id="@+id/gms1b"
                android:layout_width="120sp"
                android:layout_height="50sp"
                android:layout_marginRight="20sp"
                android:layout_marginTop="10sp"
                android:text="150 gms."
                android:textSize="16sp"
                android:visibility="gone" />

            <Button
                android:id="@+id/gms2b"
                android:layout_width="120sp"
                android:layout_height="50sp"
                android:layout_marginRight="20sp"
                android:layout_marginTop="10sp"
                android:text="80 gms."
                android:textSize="16sp" />

            <Button
                android:id="@+id/gms3b"
                android:layout_width="120sp"
                android:layout_height="50sp"
                android:layout_marginRight="20sp"
                android:layout_marginTop="10sp"
                android:layout_toRightOf="@+id/gms2b"
                android:text="40 gms."
                android:textSize="16sp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/question4_btn"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/question3_btn"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="10sp"
            android:layout_marginRight="10sp"
            android:layout_marginTop="10sp"
            android:padding="20sp" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginRight="15sp"
                android:src="@drawable/sensodyne_rapid_relief" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Which package of Repair And Protect do you generally buy ?"
                android:textColor="#242424"
                android:textSize="22sp" />

            <Button
                android:id="@+id/gms1c"
                android:layout_width="120sp"
                android:layout_height="50sp"
                android:layout_marginRight="20sp"
                android:layout_marginTop="10sp"
                android:text="80 gms."
                android:textSize="16sp" />

            <Button
                android:id="@+id/gms2c"
                android:layout_width="120sp"
                android:layout_height="50sp"
                android:layout_marginRight="20sp"
                android:layout_marginTop="10sp"
                android:layout_toRightOf="@+id/gms1c"
                android:text="40 gms."
                android:textSize="16sp" />
        </RelativeLayout>
    </RelativeLayout>
</ScrollView>