<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="TxtViewStyleTop">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">left</item>
        <item name="android:layout_marginTop">@dimen/margin_5dp</item>
        <item name="android:gravity">left</item>
        <item name="android:layout_marginLeft">@dimen/margin_3dp</item>
        <item name="android:textAllCaps" tools:ignore="NewApi">true</item>
        <item name="android:paddingLeft">@dimen/padding_3dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/txtSize_18sp</item>
        <item name="android:textColor">#fff</item>
    </style>

    <style name="TxtViewStyleLower">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">right</item>
        <item name="android:gravity">right</item>
        <item name="android:layout_marginLeft">@dimen/margin_3dp</item>
        <item name="android:paddingRight">@dimen/padding_3dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/txtSize_24sp</item>
        <item name="android:textColor">#FF9800</item>
    </style>

    <style name="TxtViewStyleTop_ph">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">left</item>
        <item name="android:layout_marginTop">@dimen/margin_5dp</item>
        <item name="android:gravity">left</item>
        <item name="android:background">#3169b4</item>
        <item name="android:layout_marginLeft">@dimen/margin_3dp</item>
        <item name="android:textAllCaps" tools:ignore="NewApi">true</item>
        <item name="android:paddingLeft">@dimen/padding_3dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/txtSize_12sp</item>
        <item name="android:textColor">#fff</item>
    </style>

    <style name="TxtViewStyleLower_ph">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">right</item>
        <item name="android:gravity">right</item>
        <item name="android:layout_marginLeft">@dimen/margin_3dp</item>
        <item name="android:paddingRight">@dimen/padding_3dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/txtSize_18sp</item>
        <item name="android:textColor">#FF9800</item>
    </style>


</resources>

